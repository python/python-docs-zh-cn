msgid "**Binary data**"
msgstr "**二进制数据**"

#: ../../howto/pyporting.rst:207
msgid "\\"
msgstr "\\"

#: ../../howto/pyporting.rst:207
msgid "decode"
msgstr "decode"

#: ../../howto/pyporting.rst:209
msgid "encode"
msgstr "encode"

#: ../../howto/pyporting.rst:211
msgid "format"
msgstr "format"

#: ../../howto/pyporting.rst:213
msgid "isdecimal"
msgstr "isdecimal"

